<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_task_image"
        android:layout_width="20dp"
        android:layout_height="35dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="17dp"
        android:background="@drawable/task"
        android:gravity="center"
          app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


    <TextView
        android:id="@+id/item_task_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/item_task_image"
        app:layout_constraintEnd_toStartOf="@+id/task_course"
        app:layout_constraintStart_toEndOf="@+id/item_task_image"
        app:layout_constraintTop_toTopOf="@+id/item_task_image" />

    <ImageView
        android:id="@+id/remove_done_item"
        android:layout_width="30dp"
        android:layout_height="32dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/item_task_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_task_image"
        app:srcCompat="@drawable/not_done" />

    <TextView
        android:id="@+id/task_course"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text=" "

        app:layout_constraintEnd_toStartOf="@+id/task_date"
        app:layout_constraintStart_toEndOf="@+id/item_task_title"
        app:layout_constraintTop_toTopOf="@+id/item_task_title" />

    <TextView
        android:id="@+id/task_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:text=" "
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintEnd_toStartOf="@+id/remove_done_item"
        app:layout_constraintStart_toEndOf="@+id/task_course"
        app:layout_constraintTop_toTopOf="@+id/task_course" />

</androidx.constraintlayout.widget.ConstraintLayout>
